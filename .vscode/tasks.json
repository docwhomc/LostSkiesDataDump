{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "dotnet: Build and Deploy Plugin",
            "command": "dotnet",
            "args": [
                "build",
                "-p:DeployToProd=true"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "Open Data File",
            "command": "code",
            "args": [
                "C:/Program Files (x86)/Steam/steamapps/common/Wild Skies/LostSkies_Data/LostSkiesDataDump/data.json"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Open Log File",
            "command": "code",
            "args": [
                "$env:APPDATA${/}com.kesomannen.gale${/}lost-skies${/}profiles${/}30Day${/}BepInEx${/}LogOutput.log"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Open Error Log File",
            "command": "code",
            "args": [
                "$env:APPDATA${/}com.kesomannen.gale${/}lost-skies${/}profiles${/}30Day${/}BepInEx${/}ErrorLog.log"
            ],
            "problemMatcher": []
        }
    ]
}
