{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "dotnet: Build and Deploy Plugin",
            "command": "dotnet",
            "args": [
                "build",
                "-p:DeployToProd=true"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "Open Data File",
            "command": "code",
            "args": [
                "'C:/Program Files (x86)/Steam/steamapps/common/Wild Skies/LostSkies_Data/LostSkiesDataDump/data.json'"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Open Log File",
            "command": "code",
            "args": [
                "'${userHome}${/}AppData${/}Roaming${/}com.kesomannen.gale${/}lost-skies${/}profiles${/}Dev${/}BepInEx${/}LogOutput.log'"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Open Error Log File",
            "command": "code",
            "args": [
                "'${userHome}${/}AppData${/}Roaming${/}com.kesomannen.gale${/}lost-skies${/}profiles${/}Dev${/}BepInEx${/}ErrorLog.log'"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Open Config File",
            "command": "code",
            "args": [
                "'${userHome}${/}AppData${/}Roaming${/}com.kesomannen.gale${/}lost-skies${/}profiles${/}Dev${/}BepInEx${/}config${/}LostSkiesDataDump.cfg'"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Copy Output",
            "command": "python",
            "args": [
                "copy_output.py"
            ],
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "type": "shell",
            "label": "Diff Output",
            "command": "python",
            "args": [
                "diff_output.py"
            ],
            "problemMatcher": [
                "$python"
            ]
        }
    ]
}
