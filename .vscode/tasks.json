{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "dotnet: Build and Deploy Plugin",
            "command": "dotnet",
            "args": [
                "build",
                "-p:DeployToProd=true"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "process",
            "label": "dotnet: Build Plugin for Release",
            "command": "dotnet",
            "args": [
                "build",
                "-p:BuildStaging=true"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
